<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".NoticeActivity">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imagePost"
        android:layout_width="@dimen/_120mdp"
        android:layout_height="@dimen/_100mdp"
        android:layout_margin="@dimen/_8font_mdp"
        android:padding="@dimen/_8font_mdp"
        app:cardBackgroundColor="@color/red_900"
        app:cardCornerRadius="@dimen/_15font_mdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_60font_mdp"
                android:layout_height="@dimen/_50font_mdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15mdp"
                android:background="@drawable/image_background"
                android:padding="@dimen/_5mdp"
                android:src="@drawable/ic_notice" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1font_mdp"
                android:layout_marginTop="@dimen/_5font_mdp"
                android:background="@color/blue_900" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Notice"
                android:textSize="@dimen/_15mdp"
                android:textStyle="bold" />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_margin="@dimen/_10mdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Write Your post...."/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10mdp"
        android:background="@color/orange_900"
        android:textAllCaps="false"
        android:textSize="@dimen/_20font_mdp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Submit"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10mdp">

        <ImageView
            android:id="@+id/galleryImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/tour" />
    </androidx.cardview.widget.CardView>


</LinearLayout>